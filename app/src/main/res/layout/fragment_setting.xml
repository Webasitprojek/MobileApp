<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_visual"
    tools:context="Fragment.SettingFragment">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="292dp"
                android:background="@drawable/top_background">

                <ImageView
                    android:id="@+id/imageprofil"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/circle_border"
                    android:src="@drawable/profil"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/txtnamatas"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:text="Kholis Adi Putra"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/imageprofil"
                    app:layout_constraintStart_toStartOf="@+id/imageprofil"
                    app:layout_constraintTop_toBottomOf="@+id/imageprofil" />

                <EditText
                    android:id="@+id/txtemailatas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="kholisadi123@gmail.com"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/txtnamatas"
                    app:layout_constraintHorizontal_bias="0.483"
                    app:layout_constraintStart_toStartOf="@+id/txtnamatas"
                    app:layout_constraintTop_toBottomOf="@+id/txtnamatas"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_background">

                <EditText
                    android:id="@+id/txtusernama"
                    android:layout_width="410dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/red_btn_txt"
                    android:hint="Nama Lengkap"
                    android:paddingLeft="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/txtemal"
                    android:layout_width="410dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/red_btn_txt"
                    android:hint="Deskripsi"
                    android:paddingLeft="12dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtusernama" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="5px"
                    android:id="@+id/txtidus"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="y"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_background">

                <Spinner
                    android:id="@+id/txtjk"
                    android:layout_width="410dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/red_btn_txt"
                    android:hint="Jenis Kelamin"
                    android:paddingLeft="12dp"
                    android:textColor="#FFFFFF"

                    android:textColorHint="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/txttang"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/txttang"
                    android:layout_width="410dp"
                    android:layout_height="40dp"
                    android:background="@drawable/red_btn_txt"
                    android:hint="Tanggal Lahir"
                    android:paddingLeft="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/txtnohap"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtjk" />

                <EditText
                    android:id="@+id/txtnohap"
                    android:layout_width="410dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/red_btn_txt"
                    android:hint="Nomer HP"
                    android:paddingLeft="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txttang" />

                <EditText
                    android:id="@+id/txtalam"
                    android:layout_width="410dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/red_btn_txt"
                    android:hint="Nomer HP"
                    android:paddingLeft="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtnohap" />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/white"
                android:textSize="20dp"
                android:id="@+id/btn_ganti"
                android:textStyle="normal"
                android:text="EDIT"
                android:layout_margin="20dp"
                android:background="@drawable/red_btn_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/white"
                android:textSize="20dp"
                android:id="@+id/btn_hapus"
                android:textStyle="normal"
                android:text="LOG OUT"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/red_btn_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>